# ============================================
# AQI Beast — Environment Variables
# ============================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# ============================================

# === LLM Provider — pick ONE ===
# Options: kilo, nvidia, qwen, google, openai, anthropic, ollama, openrouter, xai
LLM_PROVIDER=kilo
DEEP_THINK_LLM=glm-5
QUICK_THINK_LLM=minimax-2.5

# --- Kilo (FREE) — GLM5, Minimax 2.5, etc. ---
KILO_API_KEY=

# --- NVIDIA NIM (FREE) — DeepSeek V3.2, Kimi K2, GLM 4.7 ---
NVIDIA_API_KEY=
# Models: deepseek-ai/deepseek-v3-2, kimi-ai/kimi-k2-instruct, zhipu-ai/glm-4-7b

# --- Qwen (FREE via OAuth) — Qwen 3.5 Plus ---
QWEN_API_KEY=
# Model: qwen-plus

# --- Google (paid, low limits) ---
GOOGLE_API_KEY=

# --- OpenAI (paid) ---
OPENAI_API_KEY=

# === Broker Execution (OpenAlgo) ===
# Get OpenAlgo: https://openalgo.in
# Recommended: Shoonya/Finvasia (Rs.0 brokerage)
OPENALGO_API_KEY=
OPENALGO_HOST=http://127.0.0.1:5000

# === Sentiment Data (all FREE) ===
# Reddit: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=AQI-Beast/1.0

# Finnhub: https://finnhub.io/register (60 calls/min free)
FINNHUB_API_KEY=

# === Portfolio Config ===
PORTFOLIO_VALUE=100000
MAX_DRAWDOWN_PCT=15
MAX_POSITION_PCT=20
MAX_DAILY_LOSS_PCT=3
MIN_CONFIDENCE=0.5
MIN_RISK_REWARD=1.5
